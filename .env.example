# ============================================================================
# ENVIRONMENT VARIABLES - Copy this to .env and fill in your values
# NEVER commit .env to git!
# ============================================================================

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=passwords
DATABASE_USER=postgres
DATABASE_PASSWORD=your_secure_password_here

# Flask Configuration
# Supported names: FLASK_SECRET_KEY (preferred) or SECRET_KEY
FLASK_SECRET_KEY=generate-a-long-random-string-here-use-secrets-token-hex-32
FLASK_ENV=development

# For production, set:
# FLASK_ENV=production
# SESSION_COOKIE_SECURE=true
# PLATFORM_ADMIN_EMAILS=founder@yourdomain.com,ops@yourdomain.com
# ENABLE_LEGACY_FALLBACK=false
# BOOTSTRAP_DEFAULT_USERS=false

# Server Configuration (optional)
PORT=5000
