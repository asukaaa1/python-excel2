# ============================================================================
# ENVIRONMENT VARIABLES - Copy this to .env and fill in your values
# NEVER commit .env to git!
# ============================================================================

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=passwords
DATABASE_USER=postgres
DATABASE_PASSWORD=your_secure_password_here

# Flask Configuration
# Supported names: FLASK_SECRET_KEY (preferred) or SECRET_KEY
FLASK_SECRET_KEY=generate-a-long-random-string-here-use-secrets-token-hex-32
FLASK_ENV=development
PUBLIC_BASE_URL=https://your-app.up.railway.app

# For production, set:
# FLASK_ENV=production
# SESSION_COOKIE_SECURE=true
# REDIS_URL=redis://default:password@host:6379/0
# USE_REDIS_QUEUE=true
# USE_REDIS_CACHE=true
# USE_REDIS_PUBSUB=true
# RUN_REFRESH_WORKER=false
# REFRESH_INTERVAL_MINUTES=30
# IFOOD_KEEPALIVE_POLLING=true
# IFOOD_POLL_INTERVAL_SECONDS=30
# REDIS_SOCKET_TIMEOUT_SECONDS=35
# REDIS_CONNECT_TIMEOUT_SECONDS=5
# DB_POOL_ENABLED=true
# DB_POOL_MIN=1
# DB_POOL_MAX=10
# PLATFORM_ADMIN_EMAILS=founder@yourdomain.com,ops@yourdomain.com
# ENABLE_LEGACY_FALLBACK=false
# BOOTSTRAP_DEFAULT_USERS=false
# ALLOW_ANY_PLATFORM_ADMIN=false
# IFOOD_CLIENT_ID=
# IFOOD_CLIENT_SECRET=
# IFOOD_HTTP_CLIENT=requests   # set to "urllib" if requests/gevent causes recursion in your runtime
# IFOOD_TRUST_ENV=false        # set true only when you intentionally need proxy env vars

# Server Configuration (optional)
PORT=5000
